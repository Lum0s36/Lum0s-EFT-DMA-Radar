<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.QuestHelperTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <!-- Main ScrollViewer wraps everything for scrollability -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="10">
        
            <!-- ============================================= -->
            <!-- SETTINGS SECTION -->
            <!-- ============================================= -->
            <GroupBox Header="Quest Helper Settings" Margin="0,0,0,8">
                <StackPanel>
                    <!-- Collapsible Info Box -->
                    <Expander Header="Quest Helper Information" IsExpanded="False" Margin="0,0,0,8">
                        <Border Background="#2A2A2A" BorderBrush="#4A4A4A" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,4,0,0">
                            <StackPanel>
                                <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#CCCCCC">
                                    - Quest Tracking: Shows your active quests from the game. Uses LONE's quest location system.
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#CCCCCC" Margin="0,2,0,0">
                                    - Quest Locations: Zone markers are shown on the radar for objectives that require visiting specific locations.
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#CCCCCC" Margin="0,2,0,0">
                                    - Map-agnostic quests (like "Grenadier") are shown on all maps since they can be completed anywhere.
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#AAFFAA" Margin="0,4,0,0" FontWeight="Bold">
                                    TIP: Click the + button on a quest to see detailed objectives, required items, and keys.
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Expander>

                    <TextBlock Text="{Binding DatabaseInfo}" 
                               Margin="0,0,0,6" Foreground="LightGreen" FontWeight="SemiBold" FontSize="11" />

                    <!-- Compact checkbox row -->
                    <WrapPanel Orientation="Horizontal">
                        <CheckBox Content="Enable Quest Helper"
                                  IsChecked="{Binding Enabled, Mode=TwoWay}"
                                  FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,4" />
                        
                        <CheckBox Content="Show Locations on Radar"
                                  IsChecked="{Binding ShowLocations, Mode=TwoWay}"
                                  VerticalAlignment="Center" Margin="0,0,20,4"
                                  ToolTip="Shows location markers on the radar for objectives that require visiting specific locations." />
                        
                        <CheckBox Content="Show Widget on Radar"
                                  IsChecked="{Binding ShowWidget, Mode=TwoWay}"
                                  VerticalAlignment="Center" Margin="0,0,0,4"
                                  ToolTip="Shows a widget on the radar displaying tracked quests and their objectives for the current map." />
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- ============================================= -->
            <!-- QUEST LIST SECTION -->
            <!-- ============================================= -->
            <GroupBox Header="Quest Tracking" IsEnabled="{Binding Enabled}" MaxWidth="800">
                <StackPanel>
                    
                    <!-- Filter Row -->
                    <StackPanel Margin="0,0,0,6">
                        <!-- Filter Checkboxes -->
                        <WrapPanel Margin="0,0,0,6">
                            <CheckBox Content="Active Only"
                                      IsChecked="{Binding ActiveOnly, Mode=TwoWay}"
                                      VerticalAlignment="Center" Margin="0,0,12,0"
                                      ToolTip="Show only quests that are currently active in your game (in-raid only)" />
                            <CheckBox Content="Kappa Only"
                                      IsChecked="{Binding KappaOnly, Mode=TwoWay}"
                                      VerticalAlignment="Center" Margin="0,0,12,0"
                                      ToolTip="Show only quests required for Kappa container" />
                            <CheckBox Content="Lightkeeper Only"
                                      IsChecked="{Binding LightkeeperOnly, Mode=TwoWay}"
                                      VerticalAlignment="Center" Margin="0,0,12,0"
                                      ToolTip="Show only quests related to Lightkeeper" />
                        </WrapPanel>
                        
                        <!-- Status -->
                        <TextBlock Text="{Binding ActiveOnlyStatusText}" 
                                   Margin="0,0,0,4" Foreground="#80C0FF" FontSize="10" FontStyle="Italic" />
                        
                        <!-- Map filter -->
                        <WrapPanel Margin="0,2,0,0">
                            <TextBlock Text="Map:" VerticalAlignment="Center" Margin="0,0,4,0" FontSize="11" />
                            <ComboBox ItemsSource="{Binding MapFilterOptions}"
                                      SelectedItem="{Binding SelectedMapFilter, Mode=TwoWay}"
                                      IsEnabled="{Binding IsMapFilterEnabled}"
                                      Width="100"
                                      Background="#2D2D2D"
                                      ToolTip="Filter quests by map. Disabled when 'Active Only' is enabled (uses current map)." />
                        </WrapPanel>
                    </StackPanel>

                    <!-- Search Box -->
                    <TextBox Margin="0,0,0,6"
                             Text="{Binding SearchFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Padding="3" Background="#2D2D2D" Foreground="White" BorderBrush="#3E3E3E" FontSize="11" />

                    <!-- Buttons and Stats -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Button Content="{Binding SelectAllButtonText}" Click="SelectAllButton_Click" MinWidth="80" Padding="6,3" FontSize="10" />
                        <Button Content="Refresh" Click="RefreshButton_Click" MinWidth="60" Padding="6,3" Margin="6,0,0,0" FontSize="10" />
                        <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray" FontSize="10">
                            <Run Text="{Binding TrackedQuestCount, Mode=OneWay}" /><Run Text="/" /><Run Text="{Binding TotalQuestCount, Mode=OneWay}" />
                            <Run Text=" tracked | " /><Run Text="{Binding VisibleQuestCount, Mode=OneWay}" Foreground="#80C0FF" /><Run Text=" visible" />
                        </TextBlock>
                    </StackPanel>

                    <!-- ============================================= -->
                    <!-- QUEST LIST -->
                    <!-- ============================================= -->
                    <Border Background="#1E1E1E" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="4"
                            MinHeight="200" MaxHeight="500">
                        <ListBox ItemsSource="{Binding FilteredQuests}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="False"
                                 VirtualizingPanel.IsVirtualizing="False"
                                 VirtualizingPanel.VirtualizationMode="Standard"
                                 HorizontalContentAlignment="Stretch">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="1" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#252525" BorderBrush="#3E3E3E" 
                                            BorderThickness="1" CornerRadius="3" Padding="6,4">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Expand Button -->
                                                <Button Grid.Column="0" Content="{Binding ExpandButtonText}" 
                                                        Click="ExpandButton_Click" 
                                                        Width="20" Height="20" Margin="0,0,4,0"
                                                        FontWeight="Bold" FontSize="11"
                                                        Background="#3A3A3A" Foreground="White"
                                                        ToolTip="Click to show/hide quest objectives" />

                                                <!-- Tracking Checkbox -->
                                                <CheckBox Grid.Column="1" 
                                                          IsChecked="{Binding IsTracked, Mode=TwoWay}"
                                                          VerticalAlignment="Center" Margin="0,0,6,0" 
                                                          ToolTip="Toggle to enable/disable this quest for zone markers"/>

                                                <!-- Quest Info -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding TraderName}" Foreground="#FFD700" FontWeight="Bold" FontSize="9" />
                                                        <TextBlock Text=" - " Foreground="Gray" FontSize="9" />
                                                        <TextBlock Text="{Binding QuestName}" FontWeight="SemiBold" FontSize="10" TextTrimming="CharacterEllipsis" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding RequirementsInfo}" Foreground="Gray" FontSize="9" />
                                                </StackPanel>

                                                <!-- Status -->
                                                <Border Grid.Column="3" Background="{Binding StatusColor}" CornerRadius="2" Padding="4,1"
                                                        Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}}"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="ACTIVE" FontSize="8" FontWeight="Bold" Foreground="White" />
                                                </Border>
                                            </Grid>
                                            
                                            <!-- Expanded Objectives Panel -->
                                            <StackPanel Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVis}}"
                                                        Margin="24,6,0,0">
                                                <TextBlock Text="{Binding ObjectivesHeaderText}" 
                                                           Foreground="#80C0FF" FontWeight="SemiBold" FontSize="9" Margin="0,0,0,3" />
                                                
                                                <!-- No objectives message -->
                                                <TextBlock Text="No detailed objectives available" 
                                                           Foreground="Gray" FontStyle="Italic" FontSize="9"
                                                           Visibility="{Binding HasNoObjectives, Converter={StaticResource BoolToVis}}" />
                                                
                                                <!-- Objectives List -->
                                                <ItemsControl ItemsSource="{Binding Objectives}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{Binding BackgroundColor}" 
                                                                    BorderBrush="#3E3E3E" BorderThickness="1" 
                                                                    CornerRadius="2" Padding="4,2" Margin="0,1">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="32" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    
                                                                    <!-- Type Icon -->
                                                                    <Border Grid.Column="0" Background="#404040" CornerRadius="2" 
                                                                            Padding="2,1" HorizontalAlignment="Left">
                                                                        <TextBlock Text="{Binding TypeIcon}" 
                                                                                   FontSize="7" FontWeight="Bold" 
                                                                                   Foreground="#FFD700" />
                                                                    </Border>
                                                                    
                                                                    <!-- Description -->
                                                                    <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                                                        <TextBlock Text="{Binding Description}" 
                                                                                   TextWrapping="Wrap" FontSize="9"
                                                                                   Foreground="{Binding TextColor}"
                                                                                   TextDecorations="{Binding TextDecoration}" />
                                                                        <TextBlock Text="{Binding AdditionalInfo}" 
                                                                                   FontSize="8" Foreground="Gray"
                                                                                   Visibility="{Binding HasAdditionalInfo, Converter={StaticResource BoolToVis}}" />
                                                                    </StackPanel>
                                                                    
                                                                    <!-- Progress -->
                                                                    <TextBlock Grid.Column="2" Text="{Binding ProgressText}" 
                                                                               FontSize="9" FontWeight="Bold"
                                                                               Foreground="{Binding TextColor}"
                                                                               VerticalAlignment="Center" Margin="6,0,0,0"
                                                                               Visibility="{Binding HasProgress, Converter={StaticResource BoolToVis}}" />
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Status Info at bottom -->
                    <TextBlock Text="{Binding ActiveQuestsInfo}" TextWrapping="Wrap"
                               FontFamily="Consolas" FontSize="9" Foreground="LightGray" Margin="0,6,0,0" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
