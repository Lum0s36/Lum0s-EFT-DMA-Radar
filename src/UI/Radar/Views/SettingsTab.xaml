<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.SettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoneEftDmaRadar.UI.Radar.Views"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:misc="clr-namespace:LoneEftDmaRadar.UI.Misc"
             xmlns:converters="clr-namespace:LoneEftDmaRadar.UI.Converters"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             Padding="10">

    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:SettingsViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <misc:TwoPaneWidthConverter x:Key="TwoPaneWidthConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:InverseBooleanConverter x:Key="InverseBoolConverter" />
        <misc:StringToColorConverter x:Key="StringToColorConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"
                    Margin="0,0,0,10">
            <!-- Radar Settings -->
            <GroupBox Header="Radar Settings"
                      Margin="0,0,0,12">
                <StackPanel>

                    <!-- help text -->
                    <TextBlock TextWrapping="Wrap"
                               Margin="0,0,0,12"
                               FontStyle="Italic">
Zoom In: F1 / Mouse Wheel Up<LineBreak />
Zoom Out: F2 / Mouse Wheel Down<LineBreak />
Toggle Fullscreen: F11
                    </TextBlock>

                    <!-- buttons -->
                    <WrapPanel Margin="0,0,0,12">
                        <Button Content="Restart Radar"
                                ToolTip="Restarts the Radar for the current raid instance. Can be useful if stuck on 'waiting for raid start' or the raid is not functioning properly."
                                Command="{Binding RestartRadarCommand}"
                                MinWidth="100"
                                Height="35"
                                Margin="0,0,8,8" />
                        <Button Content="Color Picker"
                                ToolTip="Allows customizing entity colors on the Radar UI."
                                IsEnabled="{Binding ColorPickerIsEnabled}"
                                Command="{Binding OpenColorPickerCommand}"
                                MinWidth="100"
                                Height="35"
                                Margin="0,0,8,8" />
                        <Button Content="Open Config"
                                ToolTip="Opens the config folder."
                                Command="{Binding OpenConfigCommand}"
                                MinWidth="100"
                                Height="35"
                                Margin="0,0,8,8" />
                        <Button Content="Backup Config"
                                ToolTip="Backs up your configuration (Recommended)."
                                Command="{Binding BackupConfigCommand}"
                                MinWidth="100"
                                Height="35"
                                Margin="0,0,8,8" />
                    </WrapPanel>

                    <!-- sliders -->
                    <WrapPanel Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,16,8">
                            <TextBlock Text="UI Scale"
                                       VerticalAlignment="Center"
                                       ToolTip="Sets the scaling factor for the Radar/User Interface. For high‑resolution monitors you may want to increase this." />
                            <Slider x:Name="UIScaleSlider"
                                    Width="150"
                                    Margin="8,0"
                                    Minimum="0.5"
                                    Maximum="2.0"
                                    SmallChange="0.01"
                                    LargeChange="0.1"
                                    Value="{Binding UIScale, Mode=TwoWay}" />
                            <TextBlock Text="{Binding Value, ElementName=UIScaleSlider, StringFormat=F2}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,16,8">
                            <TextBlock Text="Radar Max FPS (0 = Unlimited)"
                                       VerticalAlignment="Center" />
                            <Slider x:Name="RadarFpsSlider"
                                    Width="180"
                                    Margin="8,0"
                                    Minimum="0"
                                    Maximum="240"
                                    SmallChange="5"
                                    LargeChange="15"
                                    TickFrequency="15"
                                    IsSnapToTickEnabled="True"
                                    Value="{Binding RadarMaxFPS, Mode=TwoWay}" />
                            <TextBlock Text="{Binding Value, ElementName=RadarFpsSlider, StringFormat='{}{0:F0}'}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,16,8">
                            <TextBlock Text="Aimline Length (0 = Unlimited)"
                                       VerticalAlignment="Center"
                                       ToolTip="Sets the length of the aimline for the local player. 0 = Unlimited." />
                            <Slider x:Name="AimlineLengthSlider"
                                    Width="150"
                                    Margin="8,0"
                                    Minimum="0"
                                    Maximum="600"
                                    SmallChange="10"
                                    LargeChange="50"
                                    Value="{Binding AimlineLength, Mode=TwoWay}" />
                            <TextBlock Text="{Binding Value, ElementName=AimlineLengthSlider, StringFormat='{}{0:F0}'}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       MinWidth="40" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,16,8"
                                    IsEnabled="{Binding TeammateAimlines}">
                            <TextBlock Text="Teammate Aimline Length (0 = Same as Player)"
                                       VerticalAlignment="Center"
                                       ToolTip="Sets the length of the aimline for teammates. 0 = Same as local player. Only active when 'Teammate Aimlines' is enabled." />
                            <Slider x:Name="TeammateAimlineLengthSlider"
                                    Width="150"
                                    Margin="8,0"
                                    Minimum="0"
                                    Maximum="600"
                                    SmallChange="10"
                                    LargeChange="50"
                                    Value="{Binding TeammateAimlineLength, Mode=TwoWay}" />
                            <TextBlock Text="{Binding Value, ElementName=TeammateAimlineLengthSlider, StringFormat='{}{0:F0}'}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       MinWidth="40" />
                        </StackPanel>
                    </WrapPanel>

                    <!-- toggles -->
                    <WrapPanel>
                        <CheckBox Content="Show Map Setup Helper"
                                  ToolTip="Toggles the 'Map Setup Helper' to assist with getting Map Bounds/Scaling"
                                  IsChecked="{Binding ShowMapSetupHelper, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Aimview Widget"
                                  ToolTip="Toggles the Aimview 'Widget' that gives you a Pseudo ESP in the radar window. Can be moved."
                                  IsChecked="{Binding AimviewWidget, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Player Info Widget"
                                  ToolTip="Toggles the Player Info 'Widget' that gives you information about the players/bosses in your raid. Can be moved."
                                  IsChecked="{Binding PlayerInfoWidget, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Loot Info Widget"
                                  ToolTip="Toggles the Loot Info 'Widget' that shows all loot items sorted by value in a table. Can be moved."
                                  IsChecked="{Binding LootInfoWidget, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Connect Groups"
                                  ToolTip="Connects players that are grouped up via semi‑transparent green lines. Does not apply to your own party."
                                  IsChecked="{Binding ConnectGroups, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Hide Names"
                                  ToolTip="Hides human player names from displaying in the Radar or Player Info Widget. Instead will show the (Height,Distance)."
                                  IsChecked="{Binding HideNames, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Show Mines"
                                  IsChecked="{Binding ShowMines, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Teammate Aimlines"
                                  ToolTip="When enabled makes teammate aimlines the same length as the main player."
                                  IsChecked="{Binding TeammateAimlines, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="AI Aimlines"
                                  ToolTip="Enables dynamic aimlines for AI Players. When you are being aimed at the aimlines will extend."
                                  IsChecked="{Binding AIAimlines, Mode=TwoWay}"
                                  Margin="0,0,0,8" />
                        <CheckBox Content="Mark Sus Players"
                                  ToolTip="Marks players as suspicious based on certain criteria (K/D, S/R, etc.)"
                                  IsChecked="{Binding MarkSusPlayers, Mode=TwoWay}"
                                  Margin="0,0,0,8" />
                    </WrapPanel>

                </StackPanel>
            </GroupBox>

            <!-- Loot -->
            <GroupBox Header="Loot"
                      Margin="0,0,0,12">
                <StackPanel>
                    <WrapPanel Margin="0,0,0,8">
                        <CheckBox Content="Show Loot (F3)"
                                  ToolTip="Toggles displaying Loot on the Radar/ESP."
                                  IsChecked="{Binding ShowLoot, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Show Static Containers"
                                  ToolTip="Shows static containers on the Radar map."
                                  IsChecked="{Binding ShowStaticContainers, Mode=TwoWay}"
                                  Margin="0,0,8,8" />
                        <Button Content="⟳ Set Global"
                                ToolTip="Apply this setting to Aimview and ESP"
                                Command="{Binding SetContainersGlobalCommand}"
                                MinWidth="90"
                                Height="28"
                                Margin="0,0,16,8" />
                        <CheckBox Content="Draw Corpse Markers"
                                  ToolTip="Shows corpse markers on Radar and Aimview (independent from ESP)."
                                  IsChecked="{Binding ShowCorpseMarkers, Mode=TwoWay}"
                                  Margin="0,0,0,8" />
                    </WrapPanel>

                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,16,8"
                                IsEnabled="{Binding ShowStaticContainers}">
                        <TextBlock Text="Container Distance (0 = Unlimited)"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="ContainerDistSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="0"
                                Maximum="200"
                                SmallChange="1"
                                LargeChange="10"
                                Value="{Binding ContainerDistance, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=ContainerDistSlider}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                        <Button Content="⟳ Set Global"
                                ToolTip="Apply this distance to Aimview and ESP"
                                Command="{Binding SetContainerDistanceGlobalCommand}"
                                MinWidth="90"
                                Height="28"
                                Margin="8,0,0,0" />
                    </StackPanel>

                    <!-- Header buttons (static size, side by side) -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,6">
                        <ToggleButton x:Name="BtnLootFilters" Content="Loot Filters" MinWidth="140" Height="28" Margin="0,0,8,0" IsChecked="False" />
                        <ToggleButton x:Name="BtnStaticContainers" Content="Static Containers" MinWidth="160" Height="28" IsChecked="False" />
                    </StackPanel>

                    <!-- Loot management panels - split view when both are checked -->
                    <Grid x:Name="LootPanelsGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="LootFiltersColumn" Width="*" />
                            <ColumnDefinition x:Name="SplitterColumn" Width="5" />
                            <ColumnDefinition x:Name="ContainersColumn" Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Loot Filters panel -->
                        <Border x:Name="LootFiltersBorder"
                                Grid.Column="0"
                                Visibility="{Binding ElementName=BtnLootFilters, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                            <local:LootFiltersTab />
                        </Border>

                        <!-- Splitter (only visible when both are checked) -->
                        <GridSplitter x:Name="LootSplitter"
                                      Grid.Column="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Width="5"
                                      Background="LightGray"
                                      ResizeDirection="Columns"
                                      ShowsPreview="False">
                            <GridSplitter.Style>
                                <Style TargetType="GridSplitter">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=BtnLootFilters, Path=IsChecked}" Value="True" />
                                                <Condition Binding="{Binding ElementName=BtnStaticContainers, Path=IsChecked}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </GridSplitter.Style>
                        </GridSplitter>

                        <!-- Static Containers panel -->
                        <Border x:Name="ContainersBorder"
                                Grid.Column="2"
                                Visibility="{Binding ElementName=BtnStaticContainers, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                            <local:StaticContainersTab />
                        </Border>
                    </Grid>

                </StackPanel>
            </GroupBox>

            <!-- Aimview ESP -->
            <GroupBox Header="Aimview ESP"
                      Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap"
                               Margin="0,0,0,12"
                               FontStyle="Italic">
Configure what entities are rendered in the Aimview widget.
                    </TextBlock>

                    <WrapPanel>
                        <CheckBox Content="Show Loot"
                                  ToolTip="Show loot items in Aimview widget"
                                  IsChecked="{Binding AimviewShowLoot, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Show Quest Items"
                                  ToolTip="Show quest items in Aimview widget"
                                  IsChecked="{Binding AimviewShowQuestItems, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Show AI"
                                  ToolTip="Show AI/Scavs/Bosses in Aimview widget"
                                  IsChecked="{Binding AimviewShowAI, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Show Enemy Players"
                                  ToolTip="Show enemy players in Aimview widget"
                                  IsChecked="{Binding AimviewShowEnemyPlayers, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Head Circle"
                                  ToolTip="Draw head circles for players and AI in Aimview widget"
                                  IsChecked="{Binding AimviewShowHeadCircle, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Show Containers"
                                  ToolTip="Show static containers in Aimview widget"
                                  IsChecked="{Binding AimviewShowContainers, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Show Exfils"
                                  ToolTip="Show exfil points in Aimview widget (always unlimited distance)"
                                  IsChecked="{Binding AimviewShowExfils, Mode=TwoWay}"
                                  Margin="0,0,0,8" />
                    </WrapPanel>

                    <!-- Show Wishlisted for Aimview -->
                    <WrapPanel Margin="0,4,0,8">
                        <CheckBox Content="Show Wishlisted"
                                  ToolTip="Show wishlist items with special marker in Aimview (uses color from Loot Filters)"
                                  IsChecked="{Binding AimviewShowWishlisted, Mode=TwoWay}"
                                  Margin="0,0,0,0" />
                    </WrapPanel>
                    
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,0,8">
                        <TextBlock Text="Loot Render Distance (0 = Unlimited)"
                                   VerticalAlignment="Center"
                                   ToolTip="Maximum distance (in meters) to render loot items in Aimview. 0 = unlimited." />
                        <Slider x:Name="AimviewLootDistanceSlider"
                                Width="200"
                                Margin="8,0"
                                Minimum="0"
                                Maximum="150"
                                SmallChange="1"
                                LargeChange="10"
                                Value="{Binding AimviewLootRenderDistance, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=AimviewLootDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   MinWidth="50" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,0,8"
                                IsEnabled="{Binding AimviewShowContainers}">
                        <TextBlock Text="Container Distance (0 = Unlimited)"
                                   VerticalAlignment="Center"
                                   ToolTip="Maximum distance (in meters) to render containers in Aimview. 0 = unlimited." />
                        <Slider x:Name="AimviewContainerDistanceSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="0"
                                Maximum="200"
                                SmallChange="1"
                                LargeChange="10"
                                Value="{Binding AimviewContainerDistance, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=AimviewContainerDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   MinWidth="50" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
